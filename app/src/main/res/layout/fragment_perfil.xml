<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textProfile"
    tools:context="com.leosssdroid.tastycocktails.Fragments.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/relativeLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/bgProfile"
        android:elevation="4dp">

        <ImageView
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bgProfile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        android:layout_marginTop="32dp"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileName"
        android:textColor="@color/textProfile"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        app:layout_constraintLeft_toLeftOf="@+id/profileImage"
        app:layout_constraintRight_toRightOf="@+id/profileImage"
        android:elevation="4dp" />

    <ImageButton
        android:id="@+id/ibLogoutFb"
        android:src="@drawable/ic_exit"
        android:clickable="true"
        android:onClick="logout"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/profileDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textProfile"
        android:textSize="12dp"
        android:textStyle="italic"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        app:layout_constraintLeft_toLeftOf="@+id/profileName"
        app:layout_constraintRight_toRightOf="@+id/profileName"
        android:elevation="4dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_likes"
        app:cardBackgroundColor="@color/colorAccentDark"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center">

            <RelativeLayout
                android:id="@+id/favs_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!---
                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/likebutton"
                    android:elevation="4dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|left"
                    app:sparkbutton_iconSize="24dp"
                    app:sparkbutton_activeImage="@drawable/ic_favorite_purple_active_18dp"
                    app:sparkbutton_inActiveImage="@drawable/ic_favorite_white_inactive_18dp"
                    app:sparkbutton_primaryColor="@color/textProfile"
                    app:sparkbutton_secondaryColor="@color/colorAccent"
                    app:sparkbutton_animationSpeed="1"
                    />
-->

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite_white_24dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:textSize="24dp"
                    android:textColor="@color/textProfile"
                    android:text="123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/likes"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/like_image" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recipes_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/favs_relative">

                <ImageView
                    android:id="@+id/recipes_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cocktailglass"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:textSize="24dp"
                    android:textColor="@color/textProfile"
                    android:text="435"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recetas"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/recipes_image" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/stars_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/recipes_relative">

                <ImageView
                    android:id="@+id/stars_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_white_24dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:textSize="24dp"
                    android:textColor="@color/textProfile"
                    android:text="154"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/puntos"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/stars_image" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
